<UserControl  x:Class="EveInvestmentTrust.Page.TransactionListPage"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:local="clr-namespace:EveInvestmentTrust.Page">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0"
                  Grid.Column="0"
                  ItemsSource="{Binding Transactions}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="4">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="Auto" Header="Edit">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit"
                                    Command="{Binding EditCommand}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Commodity" Binding="{Binding Commodity}" />
                <DataGridTextColumn Header="Debit" Binding="{Binding Debit}" />
                <DataGridTextColumn Header="Credit" Binding="{Binding Credit}" />
                <DataGridTextColumn Header="Memo" Binding="{Binding Memo}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="1"
                Grid.Column="0"
                Content="New"
                Command="{Binding NewTransactionCommand}" />

    </Grid>
</UserControl >
